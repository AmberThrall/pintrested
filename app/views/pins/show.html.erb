<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading center"><%= image_tag @pin.image.url(:big) %></div>
  <div class="panel-body">
    <%= @pin.description %><br />
    <br /><%= "By: " + @pin.user.name %><br />
  </div>

  <div class="panel-footer">
    <% if @pin.user == current_user %>
      <%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-primary" %>
      <%= link_to 'Delete', @pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
    <%= link_to 'Back', pins_path, class: "btn btn-primary" %>
  </div>
</div>
