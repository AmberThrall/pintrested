<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading center"><%= image_tag @pin.image.url(:big) %></div>
  <div class="panel-body">
    <%= @pin.description %><br />

    <% if @pin.user == current_user %>
      <%= link_to 'Edit', edit_pin_path(@pin) %> |
    <% end %>
